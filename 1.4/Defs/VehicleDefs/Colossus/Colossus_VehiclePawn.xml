<?xml version="1.0" encoding="utf-8" ?>
<!--Thanks to Vanilla Vehicles Expanded for the tank template -->
<Defs>	
	<Vehicles.VehicleDef ParentName="BaseVehiclePawn">
		<defName>PSV_Colossus</defName>
		<label>Colossus</label>
		<description>An ultratech artillery platform, the Colossus is Nanite System's response to huge, heavily armored carriers. The main canon can pierce through meters of armor, while the high-capcity shield can absorb huge amounts of incoming fire until it is depleted. 

			Heavy use of mechanites make this complex design relatively easy to construct.</description>
		
		<graphicData>
			<texPath>Things/Vehicles/Colossus/Colossus</texPath>
			<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(4,4)</drawSize>
		</graphicData>
		
		<fillPercent>1</fillPercent>
		
		<buildDef>PSV_Colossus_Blueprint</buildDef>
		
		<size>(3,3)</size>
		
		<vehicleMovementPermissions>DriverNeeded</vehicleMovementPermissions>
		<vehicleCategory>Combat</vehicleCategory>
		<techLevel>Spacer</techLevel>
		<vehicleType>Land</vehicleType>
		
		<statBases>
			<ArmorRating_Blunt>0.42</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.68</ArmorRating_Sharp>
			<Flammability>0.2</Flammability>
			<MarketValue>7000</MarketValue>
		</statBases>
		
		<vehicleStats>
			<Mass>800</Mass>
			<MoveSpeed>6.6</MoveSpeed>
			<CargoCapacity>60</CargoCapacity>
			<RepairRate>0.1</RepairRate>
		</vehicleStats>
		
		<soundSustainersOnEvent>
			<li>
				<key>(DraftOn, DraftOff)</key>
				<value>PSV_ColossusMove</value>
			</li>
		</soundSustainersOnEvent>
		
		<properties>
			<visibility>4</visibility>
			
			<customRoadCosts AssignDefaults = "0.8"/>
			
			<vehicleJobLimitations>
				<li>(RepairVehicle, 3)</li>
			</vehicleJobLimitations>
			
			<roles>
				<li>
					<key>driver</key>
					<label>Driver</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					
					<handlingTypes>
						<li>Movement</li>
						<li>Cannon</li>
					</handlingTypes>
					
					<turretIds>
						<li>mainTurret</li>
					</turretIds>
					
					<hitbox>
						<cells>
							<li>(0, 1)</li>
						</cells>
					</hitbox>
				</li>
				<li>
					<key>topleftgunner</key>
					<label>Top Left Gunner</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					
					<handlingTypes>
						<li>Cannon</li>
					</handlingTypes>
					
					<turretIds>
						<li>topLeftTurret</li>
					</turretIds>
					
					<hitbox>
						<cells>
							<li>(1, 1)</li>
						</cells>
					</hitbox>
				</li>
				<li>
					<key>toprightgunner</key>
					<label>Top Right Gunner</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					
					<handlingTypes>
						<li>Cannon</li>
					</handlingTypes>
					
					<turretIds>
						<li>topRightTurret</li>
					</turretIds>
					
					<hitbox>
						<cells>
							<li>(-1, 1)</li>
						</cells>
					</hitbox>
				</li>
				<li>
					<key>bottomleftgunner</key>
					<label>Bottom Left Gunner</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					
					<handlingTypes>
						<li>Cannon</li>
					</handlingTypes>
					
					<turretIds>
						<li>bottomLeftTurret</li>
					</turretIds>
					
					<hitbox>
						<cells>
							<li>(1, -1)</li>
						</cells>
					</hitbox>
				</li>
				<li>
					<key>bottomrightgunner</key>
					<label>Bottom Right Gunner</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					
					<handlingTypes>
						<li>Cannon</li>
					</handlingTypes>
					
					<turretIds>
						<li>bottomRightTurret</li>
					</turretIds>
					
					<hitbox>
						<cells>
							<li>(-1, -1)</li>
						</cells>
					</hitbox>
				</li>
			</roles>
		</properties>
		
		<components>
			<li>
				<key>Body</key>
				<label>Body</label>
				<health>250</health>
				
				<hitbox>
					<side>BodyNoOverlap</side>
				</hitbox>
				
				<categories>
					<li>BodyIntegrity</li>
				</categories>
			</li>
			<li>
				<key>Engine</key>
				<label>Engine</label>
				<health>75</health>
				<efficiencyWeight>10</efficiencyWeight>
				
				<reactors>
					<li Class = "Vehicles.Reactor_Explosive">
						<indicator>VF_Explosive</indicator>
						<chance>0.25</chance>
						<radius>5</radius>
						<damageDef>Bomb</damageDef>
					</li>
					<li Class = "Vehicles.Reactor_FuelLeak"/>
				</reactors>
				
				<hitbox>
					<cells>
						<li>(0, -1)</li>
					</cells>
				</hitbox>
				
				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
			<li>
				<key>FrontLeftTrack</key>
				<label>Front Left Track</label>
				<health>140</health>
				
				<hitbox>
					<side>Left</side>
				</hitbox>
				
				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
			<li>
				<key>FrontRightTrack</key>
				<label>Front Right Track</label>
				<health>140</health>
				
				<hitbox>
					<side>Right</side>
				</hitbox>
				
				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
			<li>
				<key>BackLeftTrack</key>
				<label>Back Left Track</label>
				<health>140</health>
				
				<hitbox>
					<side>Left</side>
				</hitbox>
				
				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
			<li>
				<key>BackRightTrack</key>
				<label>Back Right Track</label>
				<health>140</health>
				
				<hitbox>
					<side>Right</side>
				</hitbox>
				
				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
		
			<li>
				<key>Transmission</key>
				<label>Transmission</label>
				<health>45</health>
				
				<hitbox>
					<cells>
						<li>(0, 1)</li>
					</cells>
				</hitbox>
				
				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
			<li>
				<key>LeftArmorPlating</key>
				<label>Left Armor Plating</label>
				<health>100</health>
				
				<hitbox>
					<side>Left</side>
				</hitbox>
			</li>
			<li>
				<key>RightArmorPlating</key>
				<label>Right Armor Plating</label>
				<health>100</health>
				
				<hitbox>
					<side>Right</side>
				</hitbox>
			</li>
			<li>
				<key>FrontArmorPlating</key>
				<label>Front Armor Plating</label>
				<health>100</health>
				
				<hitbox>
					<side>Front</side>
				</hitbox>
			</li>
			<li>
				<key>Chemtank</key>
				<label>Chemtank</label>
				<health>60</health>
				
				<hitbox>
					<cells>
						<li>(0, -1)</li>
					</cells>
				</hitbox>
			</li>
			<li>
				<key>Dashboard</key>
				<label>Dashboard</label>
				<health>45</health>
			</li>
			<li>
				<key>SteeringApparatus</key>
				<label>Steering Apparatus</label>
				<health>20</health>
			</li>
			<li>
				<key>CortiumTank</key>
				<label>Cortium Tank</label>
				<health>20</health>
			</li>
			<li>
				<key>Roof</key>
				<label>Roof</label>
				<health>100</health>
			</li>
		</components>

		<comps>
			<li Class="Vehicles.CompProperties_FueledTravel">
				<fuelType>Chemfuel</fuelType>
				<leakDef>Filth_Fuel</leakDef>
				<fuelConsumptionRate>40</fuelConsumptionRate>
				<fuelConsumptionWorldMultiplier>1.2</fuelConsumptionWorldMultiplier>
				<fuelCapacity>120</fuelCapacity>
				<fuelConsumptionCondition>Drafted</fuelConsumptionCondition>
			</li>
			<li Class="Vehicles.CompProperties_VehicleTurrets">
				<turrets>
					<li>
						<turretDef>Colossus_MainTurret</turretDef>
						
						<renderProperties>
							<north>(0, 0.45)</north>
							<south>(0, 0.35)</south>
							<east>(0.05, 0.4)</east>
						</renderProperties>
						
						<uiRenderProperties>
							<north>(0, -15)</north>
							<east>(1, -15)</east>
							<south>(0, -13)</south>
						</uiRenderProperties>
						
						<gizmoLabel>Main Turret</gizmoLabel>
						<autoTargeting>false</autoTargeting>
						
						<key>mainTurret</key>
					</li>
					<li>
						<turretDef>Colossus_PDTurret</turretDef>
						
						<renderProperties>
							<north>(0, 0.45)</north>
							<south>(0, 0.35)</south>
							<east>(0.05, 0.4)</east>
						</renderProperties>
						
						<uiRenderProperties>
							<north>(0, -15)</north>
							<east>(1, -15)</east>
							<south>(0, -13)</south>
						</uiRenderProperties>
						
						<gizmoLabel>Top Left Turret</gizmoLabel>
						<autoTargeting>false</autoTargeting>
						
						<key>topLeftTurret</key>
					</li>
					<li>
						<turretDef>Colossus_PDTurret</turretDef>
						
						<renderProperties>
							<north>(1, 0)</north>
							<south>(0, 0)</south>
							<east>(-1, 0)</east>
						</renderProperties>
						
						<uiRenderProperties>
							<north>(0, -15)</north>
							<east>(1, -15)</east>
							<south>(0, -13)</south>
						</uiRenderProperties>
						
						<gizmoLabel>Top Right Turret</gizmoLabel>
						<autoTargeting>false</autoTargeting>
						
						<key>topRightTurret</key>
					</li>
					<li>
						<turretDef>Colossus_PDTurret</turretDef>
						
						<renderProperties>
							<north>(0, 0)</north>
							<south>(1, 0)</south>
							<east>(1, 0)</east>
						</renderProperties>
						
						<uiRenderProperties>
							<north>(0, -15)</north>
							<east>(1, -15)</east>
							<south>(0, -13)</south>
						</uiRenderProperties>
						
						<gizmoLabel>Bottom Left Turret</gizmoLabel>
						<autoTargeting>false</autoTargeting>
						
						<key>bottomLeftTurret</key>
					</li>
					<li>
						<turretDef>Colossus_PDTurret</turretDef>
						
						<renderProperties>
							<north>(0, 0)</north>
							<south>(1, 0)</south>
							<east>(1, 0)</east>
						</renderProperties>
						
						<uiRenderProperties>
							<north>(0, -15)</north>
							<east>(1, -15)</east>
							<south>(0, -13)</south>
						</uiRenderProperties>
						
						<gizmoLabel>Bottom Right Turret</gizmoLabel>
						<autoTargeting>false</autoTargeting>
						
						<key>bottomRightTurret</key>
					</li>
				</turrets>
			</li>
			<li Class="VFECore.CompProperties_ShieldBubble">
				<EnergyShieldRechargeRate>0.1</EnergyShieldRechargeRate>         <!-- Set the shield energy recharge rate -->
				<EnergyShieldEnergyMax>1000</EnergyShieldEnergyMax>               <!-- Set the shield max energy -->
				<blockRangedAttack>true</blockRangedAttack>                      <!-- Set if it block incoming ranged attack -->
				<blockMeleeAttack>false</blockMeleeAttack>                       <!-- Set if it block incoming melee attack -->
				<showWhenDrafted>true</showWhenDrafted>                          <!-- Set if it should be showed when the pawn is drafted -->
				<showAlways>false</showAlways>                                   <!-- Set if it should always be showed -->
				<showOnHostiles>true</showOnHostiles>                            <!-- Set if it should be showed on hostile pawns -->
				<showOnNeutralInCombat>true</showOnNeutralInCombat>              <!-- Set if it should be showed on neutral pawns -->
				<maxShieldSize>5.8</maxShieldSize>                               <!-- Set maximum shield size (when energy is full) -->
				<minShieldSize>5.2</minShieldSize>                               <!-- Set minimum shield size (when energy is empty) -->
				<shieldColor>(1, 1, 1, 1)</shieldColor>                          <!-- Set the shield color (can be rgb or rgba) -->
				<EnergyLossPerDamage>1</EnergyLossPerDamage>                    <!-- Set the damage multiplier (0 mean the shield will never break) -->
				<disableRotation>true</disableRotation>                          <!-- Set if the shield texture can be rotated -->
				<absorbDamageSound>EnergyShield_AbsorbDamage</absorbDamageSound> <!-- SoundDef played when absorbing damage -->
				<brokenSound>EnergyShield_Broken</brokenSound>                   <!-- SoundDef played when the shield break -->
				<resetSound>EnergyShield_Reset</resetSound>                      <!-- SoundDef played when the shield reset (regenerate) -->
			  </li>
		</comps>
	</Vehicles.VehicleDef>
</Defs>