<?xml version="1.0" encoding="utf-8" ?>
<!--Thanks to Vanilla Vehicles Expanded for the drop pod template -->
<Defs>
	<Vehicles.VehicleDef ParentName="BaseVehiclePawn">
		<defName>PSV_Reaver</defName>
		<label>Reaver</label>
		<description>Dubbed a "Flying Brick" by enemies and allies alike, the New Conglomerate Reaver is as crude as it is effective. Oversized engines more than compensate for the chunky airframe and the equally oversized, fully automatic shotgun bolted to it. /n/n Being a New Conglomerate design, heavy use of mechanites makes construction of this spacer-tech jumpjet relatively easy. It is capable of taking off without a runaway.</description>
		
		<graphicData>
			<texPath>Things/Vehicles/Reaver/Reaver</texPath>
			<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		
		<fillPercent>1</fillPercent>
		
		<nameable>false</nameable>

		<buildDef>PSV_Reaver_Blueprint</buildDef>

		<canCaravan LockSetting="True">true</canCaravan>
		
		<size>(2,2)</size>
		<uiIconScale>0.85</uiIconScale>
		
		<vehicleMovementPermissions>DriverNeeded</vehicleMovementPermissions>
		<vehicleCategory>Combat</vehicleCategory>
		<techLevel>Industrial</techLevel>
		<vehicleType>Air</vehicleType>
		
		<statBases>
			<ArmorRating_Blunt>0.34</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.80</ArmorRating_Sharp>
			<Flammability>0.5</Flammability>
			<MarketValue>3000</MarketValue>
		</statBases>
		
		<vehicleStats>
			<Mass>200</Mass>
			<MoveSpeed>20</MoveSpeed>
			<CargoCapacity>100</CargoCapacity>
			<RepairRate>5</RepairRate>
			<FlightSpeed>50</FlightSpeed>
		</vehicleStats>
		
		
		<properties>
			<visibility>8</visibility>
			
			<roles>
				<li>
					<key>Pilot</key>
					<label>Pilot</label>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					<handlingTypes>
						<li>Movement</li>
						<li>Cannon</li>
					</handlingTypes>
					<turretIds>
						<li>mainTurret</li>
						<li>missilePods</li>
					</turretIds>
					<hitbox>
						<side>Front</side>
					</hitbox>
				</li>
			</roles>
		</properties>
		
		<components>
			<li>
				<key>Chassis</key>
				<label>Chassis</label>
				<health>600</health>
				
				<hitbox>
					<side>Body</side>
				</hitbox>
				
				<categories>
					<li>BodyIntegrity</li>
				</categories>
			</li>
			<li>
				<key>Engine</key>
				<label>Engine</label>
				<health>100</health>
				
				<reactors>
					<li Class = "Vehicles.Reactor_Explosive">
						<indicator>VF_Explosive</indicator>
						<chance>0.25</chance>
						<radius>3</radius>
						<damageDef>Bomb</damageDef>
					</li>
					<li Class = "Vehicles.Reactor_FuelLeak"/>
				</reactors>
				
				<hitbox>
					<side>Back</side>
				</hitbox>
				
				<categories>
					<li>MoveSpeed</li>
					<li>FlightControl</li>
					<li>FlightSpeed</li>
				</categories>
			</li>
			<li>
				<key>LeftThruster</key>
				<label>Left Thruster</label>
				<health>30</health>
				
				<hitbox>
					<side>Left</side>
				</hitbox>
				
				<categories>
					<li>MoveSpeed</li>
					<li>FlightControl</li>
					<li>FlightSpeed</li>
				</categories>
			</li>
			<li>
				<key>RightThruster</key>
				<label>Right Thruster</label>
				<health>30</health>

				<hitbox>
					<side>Right</side>
				</hitbox>
				
				<categories>
					<li>MoveSpeed</li>
					<li>FlightControl</li>
					<li>FlightSpeed</li>
				</categories>
			</li>
			<li>
				<key>Stabilizers</key>
				<label>Stabilizers</label>
				<health>20</health>
				
				<hitbox>
					<side>Body</side>
				</hitbox>
				
				<categories>
					<li>MoveSpeed</li>
					<li>FlightControl</li>
					<li>FlightSpeed</li>
				</categories>
			</li>
		</components>

		<comps>	
			
			<li Class="Vehicles.CompProperties_FueledTravel">
				<fuelType>Chemfuel</fuelType>
				<fuelConsumptionRate>100</fuelConsumptionRate>
				<fuelCapacity>360</fuelCapacity>
				<fuelConsumptionCondition>FlyingOrDrafted</fuelConsumptionCondition>
			</li>
			<li Class="Vehicles.CompProperties_VehicleLauncher">
				<controlInFlight>true</controlInFlight>
				<launchProtocol Class="Vehicles.VTOLTakeoff">
					<movementType>Decelerate</movementType>
					<launchProperties>
						<speed>0.2</speed>
						<maxTicks>500</maxTicks>
						<additionalLaunchTextures>
							<li>
								<texPath>Animations/JetEffect</texPath>
								<graphicClass>Vehicles.Graphic_Animate</graphicClass>
								<drawSize>(2, 2)</drawSize>
								<drawOffset>(-0.6, 0, -1.5)</drawOffset>
								<shaderType>Transparent</shaderType>
								<layer>-1</layer>
							</li>
							<li>
								<texPath>Animations/JetEffect</texPath>
								<graphicClass>Vehicles.Graphic_Animate</graphicClass>
								<drawSize>(2, 2)</drawSize>
								<drawOffset>(0.665, 0, -1.5)</drawOffset>
								<shaderType>Transparent</shaderType>
								<layer>-1</layer>
							</li>
						</additionalLaunchTextures>
					</launchProperties>
					<landingProperties>
						<speed>0.1</speed>
						<maxTicks>500</maxTicks>
						<delayByTicks>100</delayByTicks>
						<additionalLaunchTextures>
							<li>
								<texPath>Animations/JetEffect</texPath>
								<graphicClass>Vehicles.Graphic_Animate</graphicClass>
								<drawSize>(2, 2)</drawSize>
								<drawOffset>(-0.6, 0, -1.5)</drawOffset>
								<shaderType>Transparent</shaderType>
								<layer>-1</layer>
							</li>
							<li>
								<texPath>Animations/JetEffect</texPath>
								<graphicClass>Vehicles.Graphic_Animate</graphicClass>
								<drawSize>(2, 2)</drawSize>
								<drawOffset>(0.665, 0, -1.5)</drawOffset>
								<shaderType>Transparent</shaderType>
								<layer>-1</layer>
							</li>
						</additionalLaunchTextures>
					</landingProperties>
				</launchProtocol>
			</li>
			<li Class="Vehicles.CompProperties_VehicleTurrets">
				<turrets>
					<li>
						<turretDef>Reaver_Shotgun</turretDef>
						
						<gizmoLabel>Shotgun Turret</gizmoLabel>
						<autoTargeting>true</autoTargeting>
						
						<key>mainTurret</key>
					</li>
					<li>
						<turretDef>Reaver_Rockets</turretDef>
						
						<gizmoLabel>Missile Pods</gizmoLabel>
						<autoTargeting>false</autoTargeting>
						
						<key>missilePods</key>
					</li>
				</turrets>
			</li>
		</comps>
	</Vehicles.VehicleDef>
</Defs>