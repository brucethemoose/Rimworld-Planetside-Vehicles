		<label>M30 Air Hammer</label>
		<turretType>Rotatable</turretType>
		<shotSound>PSV_AirHammerSound</shotSound>
		<reloadSound>Standard_Reload</reloadSound>
		
		<projectile>Bullet_Shotgun</projectile>
		<reloadTimer>4.8</reloadTimer>
		<warmUpTimer>0.2</warmUpTimer>
		<magazineCapacity>14</magazineCapacity>
		<chargePerAmmoCount>1</chargePerAmmoCount>
		<genericAmmo>true</genericAmmo>

		
		<autoSnapTargeting>true</autoSnapTargeting>
		<rotationSpeed>20</rotationSpeed>
		
		<projectileOffset>2.5</projectileOffset>
