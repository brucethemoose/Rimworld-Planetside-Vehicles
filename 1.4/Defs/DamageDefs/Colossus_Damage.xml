<?xml version="1.0" encoding="UTF-8"?>
<Defs>

<!-- ================================= Colossus Damage ==================================== -->
<DamageDef Name="PSV_ColossusDamage">
	<defName>PSV_ColossusDamage</defName>
    <label>Colossus Slug</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has died in an explosion.</deathMessage>
	<isExplosive>true</isExplosive>
    <hediff>Burn</hediff>
    <hediffSolid>Shredded</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Electric</impactSoundType>
    <armorCategory>Sharp</armorCategory>
    <minDamageToFragment>15</minDamageToFragment>
    <defaultDamage>10</defaultDamage>
    <defaultStoppingPower>1.5</defaultStoppingPower>
    <defaultArmorPenetration>10</defaultArmorPenetration>
    <buildingDamageFactor>3</buildingDamageFactor>
    <plantDamageFactor>3</plantDamageFactor>
    <explosionAffectOutsidePartsOnly>false</explosionAffectOutsidePartsOnly>
    <explosionHeatEnergyPerCell>5</explosionHeatEnergyPerCell>
    <explosionCellMote>Mote_Bombardment</explosionCellMote>
    <explosionColorCenter>(0.1,1,1)</explosionColorCenter>
    <explosionColorEdge>(0.1,0.9,0.9)</explosionColorEdge>
    <soundExplosion>Explosion_EMP</soundExplosion>
    <combatLogRules>Damage_Bomb</combatLogRules>
</DamageDef>
</Defs>